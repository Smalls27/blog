<div class="container">
	<form action="/upload" method="POST" enctype="multipart/form-data">
		<div class="row">
			<label class="col text-center labelClass" for="file">Upload Work</label>
		</div>
		<div class="row marginSpace2">
			<input class="col-md-6 form-control" name="blogTitle" type="text" placeholder="Blog Title" />
			<div class="col-md-6 input-group">
				<div class="custom-file">
				  <input multiple type="file" class="custom-file-input" name="bloggerImage" id="inputGroupFile03" aria-describedby="inputGroupFileAddon03">
