<%- include("partials/header") %>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
	<a id="blogLogo" class="navbar-brand" href="http://localhost:3000/">Blogrealm</a>

	<ul class="navbar-nav mr-auto">
		
	</ul>
</nav>

<div class="container marginSpace3">
    <div class="row">
        <div class="col-5 container marginSpace2 widthChange">
            <div class="container widthChange marginBottom">
                <h3>Create account.</h3>
            </div>
            <form action="/createBlogger" method="POST" enctype="multipart/form-data">
                <div class="container">
                    
                    <div class="row input-group marginBottom">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" name="image" id="inputGroupFile03" aria-describedby="inputGroupFileAddon03">
                            <label class="custom-file-label" for="inputGroupFile03">Upload Image</label>
                        </div>
                    </div>
                

                    <div class="row marginBottom">
                        <h6><%= errMessage %></h6>
                        <input class="col-md-5 form-control" type="text" name="username" placeholder="Username" />
                        <div class="col-1"></div>
                        <input class="col-md-6 form-control" type="password" name="password" placeholder="Password" />
                    </div>
                    
                    <div class="row">
                        <input class="col-md-4 form-control" type="text" name="genre" placeholder="Genre" />
                        <div class="col-1"></div>
                        <input class="col-md-7 form-control" type="text" name="blogName" placeholder="Blog Name" />
                    </div>
                    <hr>
                    <div class="row">
                        <button class="btn btn-primary btn-block" type="submit">Create account</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div> 
<%- include("partials/footer") %> 