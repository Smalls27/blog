<div class="container marginSpace3">
    <div class="row">
        <div class="col-5 container marginSpace2 widthChange">
            <div class="container widthChange marginBottom">
                <h3>Create a blog account.</h3>
            </div>
            <form action="/createBlogger" method="POST">
                <div class="container">
                    <div class="row marginBottom">
                        <input class="col-md-5 form-control" type="text" name="username" placeholder="Username" />
                        <div class="col-1"></div>
                        <input class="col-md-6 form-control" type="password" name="password" placeholder="Password" />
                    </div>
                    
                    <div class="row">
                        <input class="col-md-4 form-control" type="text" name="genre" placeholder="Genre" />
                        <div class="col-1"></div>
                        <input class="col-md-7 form-control" type="text" name="blogName" placeholder="Blog Name" />
                    </div>
                    <hr>
                    <div class="row">
                        <button class="btn btn-primary btn-block" type="submit">Create blog account</button>
                    </div>
                </div>
            </form>
        </div>

        <div class="col-2 container text-center paddingTop">
            <h1>OR</h1>
        </div>

        <div class="col-5 container widthChange marginSpace2">
            <div class="container widthChange marginBottom">
                <h3>Create a user account</h3>
            </div>
            <form action="/createBlogger" method="POST">
                <div class="row marginBottom">
                    <input class="col form-control" type="text" name="username" placeholder="Username" />
                </div>
                <div class="row">
                    <input class="col form-control" type="password" name="password" placeholder="Password" />
                </div>
                <hr>
                <div class="row">
                    <button class="btn btn-primary btn-block" type="submit">Create user account</button>
                </div>
            </form>
        </div>
    </div>
</div> 
