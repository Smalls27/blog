<%- include("partials/header") %>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
	<a id="blogLogo" class="navbar-brand" href="http://localhost:3000/">Blogrealm</a>
</nav>

<div class="container-fluid paddingZero">
	<img src="/images/SMALLS.jpg" height="200" width="100%" />
</div>

<div class="container">
	<div class="row">
		<h1 class="col-10"><%= blogger.blogName %></h1>
		<form action="/blog/<%= blogger._id %>" method="POST" class="col-2 text-center paddingTop">
			<div>
				<button class="btn btn-primary btn-block" type="submit">Certify</button>
			</div>
		</form>
	</div>
	<div class="row marginSpace">
		<h5 class="col">Followers: <%= followers %></h5>
	</div>

	<hr>

	<div class="container d-flex flex-wrap morePadding">
		<% blogger.merchandise.forEach(merch => { %>
			<div class="container smallContainer2">
				<div class="row">
					<h6><%= merch.nameOfMerch %></h6>
				</div>
				<div class="row">
					<img src="/<%= merch.file %>" height="100" width="100"/>	
				</div>
				<div class="row paddingLeft">
					<h6>$<%= merch.price %></h6>
				</div>
			</div>
		<% }) %> 
	</div>

	<hr>

	<div class="container d-flex flex-wrap">
		<div class="container smallsContainer2">
			<% blogger.listOfWorks.forEach(work => { %>
				<div class="row">
					<img src="/<%= work.file %>" height="200" width="200" />
				</div>
				<div class="row">
					<h5><%= work.title %></h5>
				</div>
			<% }) %> 
		</div>
	</div>
</div>
<%- include("partials/footer") %>
