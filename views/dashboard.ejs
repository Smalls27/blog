<%- include("partials/header") %>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
	<a id="blogLogo" class="navbar-brand" href="/">Blogrealm</a>

	<ul class="navbar-nav mr-auto">
		<li class="nav-item active">
			<a class="nav-link" href="#">Dashboard</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" href="/merchandise">Merchandise</a>
		</li>
	</ul>
	<form class="mr-3">
		<button type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target="#messages">Messages</button>
	</form>
	<form class="mr-4">
		<h6><a href="/upload">Upload Work</a></h6>
	</form>
	<form>
		<img class="mr-2 roundImage" src="<%= imageFile %>" height="30" width="30" />
	</form>
	<form class="mr-3">
		<h6><%= blogName %></h6>
	</form>
	<a href="dashboard/logout" class="form-inline">
		<button class="btn btn-primary btn-block" type="submit">Log Out</button>
	</a>
</nav>

<div class="modal fade" id="messages" tabindex="-1" aria-labelledby="messagesLabel" aria-hidden="true">
	<div class="modal-dialog">
	  	<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Messages</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<div>
					<% blogger.followers.forEach(follower => { %>
						<div>
							<h6 class="messageColor"><%= follower.blogName %></h6>
						</div>
					<% }) %>
				</div>
				<textarea class="form-control" rows="4" cols="55"></textarea>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
				<button type="button" class="btn btn-primary">Send message</button>
			</div>
	  	</div>
	</div>
</div>

<div class="container">
	<div class="row blogTitle">
		<h1>Name of the Blog</h1>
	</div>
</div>

<div class="container listOfWorks">
	<div class="row">
		<h4 id="listOfWorks">List of Works</h4>
	</div>
	<div class="container d-flex flex-wrap works">
		<% workList.forEach(work => { %>
			<div class="container smallContainer2">
				<a class="anchorStyle" href="dashboard/<%= work._id %>">
					<div class="row">
						<h3><%= work.title %></h3>
					</div>
					<div class="row">
						<img src="<%= work.file %> " width="100" height="100" />
					</div>
				</a>
			</div>
		<% }); %>
	</div>
</div>

<%- include("partials/footer") %>
