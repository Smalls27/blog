<%- include("partials/header") %>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
	<a id="blogLogo" class="navbar-brand" href="http://localhost:3000/">Blogrealm</a>

	<ul class="navbar-nav mr-auto">
		<li class="nav-item active">
			<a class="nav-link" href="#">Dashboard</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" href="http://localhost:3000/merchandise">Merchandise</a>
		</li>
	</ul>
	<form class="mr-3">
		<h6><a href="http://localhost:3000/upload">Upload Work</a></h6>
	</form>
	<form class="mr-3">
		<h6><%= blogName %></h6>
	</form>
	<a href="dashboard/logout" class="form-inline">
		<button class="btn btn-primary btn-block" type="submit">Log Out</button>
	</a>
</nav>

<div class="container">
	<div class="row blogTitle">
		<h1>Name of the Blog</h1>
	</div>
</div>

<div class="container listOfWorks">
	<div class="row">
		<h4 id="listOfWorks">List of Works</h4>
	</div>
	<div class="container d-flex flex-wrap works">
		<% workList.forEach(work => { %>
			<div class="container smallContainer2">
				<a class="anchorStyle" href="dashboard/<%= work._id %>">
					<div class="row">
						<h3><%= work.title %></h3>
					</div>
					<div class="row">
						<img src="/<%= work.file %> " width="100" height="100" />
					</div>
				</a>
			</div>
		<% }); %>
	</div>
</div>

<%- include("partials/footer") %>
